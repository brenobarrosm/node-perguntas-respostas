<%- include ('partials/header.ejs') %> 
<body>
    <%- include ('partials/navbar.ejs') %> 
    
    <div class="container">
        <br>
            <h1>Perguntas</h1>

        <% perguntas.forEach(pergunta => { %>
       
            <hr>
            <br>
            <div class="card">
                
                <div class="card-body">
                    <h3> <%= pergunta.titulo %>  </h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-warning">Responder</a>
                </div>
            </div>

        <% }) %>
    </div>

</body>
