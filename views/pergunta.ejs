<%- include ('partials/header.ejs') %> 
<body>
    <%- include ('partials/navbar.ejs') %> 
    
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>
        <form method="post" action="/responder">
            <h4>Envie sua resposta</h4>
            <textarea class="form-control" name="corpo" placeholder="Digite sua resposta"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-warning">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <p> <%= resposta.corpo %> </p>
                </div>
            </div>
            <br>
        <% }) %>
    </div>

</body>
<%- include ('partials/footer.ejs') %> 
